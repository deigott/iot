# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  # Define the specifications for the machines
  config.vm.define "mashadS" do |server|
    server.vm.box = "centos/8"  # Use the latest stable version of Ubuntu
    server.vm.network "private_network", ip: "192.168.56.110"
    server.vm.synced_folder ".", "/vagrant", type:"virtualbox"
    server.vm.provider "virtualbox" do |vb|
      vb.memory = 512  # 512 MB of RAM
      vb.cpus = 1      # 1 CPU
    end
    server.vm.provision "shell", run: "always", inline: <<-SHELL
      IPADDR=$(ip a show eth1 | grep "inet " | awk '{print $2}' | cut -d / -f1)
      curl -sfL https://get.k3s.io | sh -s - server --write-kubeconfig-mode 644 --flannel-iface=eth1
      NODE_TOKEN="/var/lib/rancher/k3s/server/node-token"
      cp ${NODE_TOKEN} /vagrant/
    SHELL
    
    server.vm.hostname = "mashadS"
  end
  
  config.vm.define "mashadSW" do |serverWorker|
    serverWorker.vm.box = "centos/8"  # Use the latest stable version of Ubuntu
    serverWorker.vm.network "private_network", ip: "192.168.56.111"
    serverWorker.vm.synced_folder ".", "/vagrant", type:"virtualbox"
    serverWorker.vm.provider "virtualbox" do |vb|
      vb.memory = 512  # 512 MB of RAM
      vb.cpus = 1      # 1 CPU
    end
    serverWorker.vm.provision "shell", run: "always", inline: <<-SHELL
			curl -sfL https://get.k3s.io | sh -s - agent --server "https://192.168.56.110:6443" --write-kubeconfig-mode 644 $K3S_TOKEN$(cat /vagrant/node-token) --flannel-iface=eth1
    SHELL
    serverWorker.vm.hostname = "mashadSW"
  end
end
